ProblemInstance::ProblemInstance(vector<vector<int> > _u,  vector<int> _d, vector<int> _k, vector<int> _f, vector<int> _s, vector<int> _m) {
  u = _u;
  d = _d;
  k = _k;
  f = _f;
  s = _s;
  m = _m;
}

vector<vector<bool> > ProblemInstance::getAllowedConnections() const {
  return u;
}
  
vector<int> ProblemInstance::getDemmands() const {
  return d;
}

vector<int> ProblemInstance::getCapacities() const {
  return k;
}

vector<int> ProblemInstance::getFixedCosts() const {
  return f;
}
  
vector<int> ProblemInstance::getSegmentCosts() const {
  return s;
}

int ProblemInstance::getMinCostSegment() const {
  return m;
}

int ProblemInstance::getNOffices() const {
  return d.size();
}

int ProblemInstance::getNCenters() const {
  return k.size();
}
